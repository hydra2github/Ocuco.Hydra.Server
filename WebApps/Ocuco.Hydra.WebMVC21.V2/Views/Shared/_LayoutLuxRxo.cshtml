<!DOCTYPE html>
<html>
<head>
    <title>Hydra: @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/LandingPage/favicon.ico">
    @RenderSection("Styles", false)
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-flask"></i> Hydra Hub for RXO</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="CheckFrame">CheckFrame</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="CheckOrder">CheckOrder</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="SendOrder">SendOrder</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="AuditDashboard">Audit Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LuxRxoUI" asp-action="About">About</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>


    <section class="container">

        <div>
            <h2 class="text-center">@ViewBag.Title</h2>
        </div>

        @RenderBody()
    </section>


    <footer class="container">
        <div class="text-center">Copyright © 2018 - Hydra by Cosmos Team, Ocuco</div>
    </footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
